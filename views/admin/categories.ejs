     <script>
        document.getElementById('createCategoryForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to create this category?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, create it!',
                cancelButtonText: 'No, cancel!',
            }).then((result) => {
                if (result.isConfirmed) {
                    // If confirmed, show success message and submit form
                    Swal.fire({
                        title: 'Category Created',
                        text: 'The category has been successfully created.',
                        icon: 'success'
                    }).then(() => {
                        this.submit(); // Submit the form
                    });
                }
            });
        });
    </script> 
    <script>
         function confirmToggleStatus(id, isActive) {
        const action = isActive ? 'block' : 'unblock';
        Swal.fire({
            title: `Are you sure you want to ${action} this category?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, do it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/categoryStatus?_id=${id}`;
            }
        });
    }
    </script>

<script>
    const productName = document.getElementById('product_name');
    const productDescription = document.getElementById('product_description');
    const error1 = document.getElementById('error1');
    const error2 = document.getElementById('error2');
    const createCategoryForm = document.getElementById('createCategoryForm');
    const submitButton = document.getElementById('submitButton');

    // Hide error messages initially
    error1.style.display = 'none';
    error2.style.display = 'none';

    let isNameBlurred = false;
    let isDescriptionBlurred = false;

    function validateProductName() {
        const nameVal = productName.value.trim();
        if (isNameBlurred) {
            if (nameVal === "") {
                error1.style.display = 'block';
                error1.innerHTML = 'Category name is required';
                return false;
            } else if (!/^[A-Za-z]+$/.test(nameVal)) {
                error1.style.display = 'block';
                error1.innerHTML = 'Name can only contain letters';
                return false;
            } else if (nameVal.length < 3) {
                error1.style.display = 'block';
                error1.innerHTML = 'Name should contain more than 3 letters';
                return false;
            } else {
                error1.style.display = 'none';
                error1.innerHTML = '';
                return true;
            }
        } else {
            return true; // No error if not yet blurred
        }
    }

    function validateProductDescription() {
        const descVal = productDescription.value.trim();
        if (isDescriptionBlurred) {
            if (descVal === "") {
                error2.style.display = 'block';
                error2.innerHTML = 'Description is required';
                return false;
            } else {
                error2.style.display = 'none';
                error2.innerHTML = '';
                return true;
            }
        } else {
            return true; // No error if not yet blurred
        }
    }

    function validateForm() {
        const isNameValid = validateProductName();
        const isDescriptionValid = validateProductDescription();
        submitButton.disabled = !(isNameValid && isDescriptionValid);
    }

    productName.addEventListener('blur', () => {
        isNameBlurred = true;
        validateForm();
    });
    productDescription.addEventListener('blur', () => {
        isDescriptionBlurred = true;
        validateForm();
    });

    productName.addEventListener('input', validateForm);
    productDescription.addEventListener('input', validateForm);

    createCategoryForm.addEventListener('submit', function(e) {
        isNameBlurred = true;
        isDescriptionBlurred = true;
        validateForm();

        if (submitButton.disabled) {
            e.preventDefault();
        }
    });

    // Initial validation check in case the fields are pre-filled
    validateForm();
</script>


