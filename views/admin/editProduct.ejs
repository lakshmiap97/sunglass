    <script>
        async function deleteImage(productId, imageIndex) {
            try {
                // Show confirmation dialog
                const result = await Swal.fire({
                    title: 'Are you sure?',
                    text: 'Do you really want to delete this image?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                });
    
                if (result.isConfirmed) {
                    // Proceed with the deletion
                    const response = await fetch('/deleteImage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId, imageIndex })
                    });
    
                    const data = await response.json();
    
                    if (data.success) {
                        await Swal.fire({
                            title: 'Deleted!',
                            text: 'Image deleted successfully!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
                        // Remove the image container from the DOM
                        document.getElementById(`image-container-${imageIndex}`).remove();
                    } else {
                        throw new Error('An error occurred while deleting the image.');
                    }
                }
            } catch (error) {
                await Swal.fire({
                    title: 'Error!',
                    text: error.message,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        }
    </script>
      

   
   
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const form = document.getElementById('pdtform');
      
          form.addEventListener('submit', function(event) {
            event.preventDefault();
      
            const formData = new FormData(form);
      
            fetch('/editProduct', {
              method: 'POST',
              body: formData
            })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                if (data.product) {
                  Swal.fire({
                    title: 'Success!',
                    text: 'Product updated successfully!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                  }).then(() => {
                    window.location.href = '/product';
                  });
                }
              } else {
                Swal.fire({
                  title: 'Failed!',
                  text: 'Failed to update product.',
                  icon: 'error',
                  confirmButtonText: 'OK'
                });
              }
            })
            .catch(error => {
              console.error('Error:', error);
              Swal.fire({
                title: 'Error!',
                text: 'An error occurred while updating the product.',
                icon: 'error',
                confirmButtonText: 'OK'
              });
            });
          });
        });
      </script>
      <script>
        document.getElementById('pdtform').addEventListener('submit', function(event) {
            const name = document.getElementById('pdtname').value.trim();
            const description = document.getElementById('pdtdes').value.trim();
            const regularPrice = document.getElementById('regprice').value.trim();
            const salesPrice = document.getElementById('saleprice').value.trim();
            const blackQuantity = document.getElementById('blackQuantity').value.trim();
            const blueQuantity = document.getElementById('blueQuantity').value.trim();
            const redQuantity = document.getElementById('redQuantity').value.trim();
            const greenQuantity = document.getElementById('greenQuantity').value.trim();
            const yellowQuantity = document.getElementById('yellowQuantity').value.trim();
    
            const error1 = document.getElementById('error1');
            const error2 = document.getElementById('error2');
            const error3 = document.getElementById('error3');
            const error4 = document.getElementById('error4');
    
            // Reset previous error messages
            error1.style.display = 'none';
            error2.style.display = 'none';
            error3.style.display = 'none';
            error4.style.display = 'none';
    
            let isValid = true;
    
            // Validate name
            if (name === '') {
                error1.textContent = 'Please enter a product name.';
                error1.style.display = 'block';
                isValid = false;
            }
    
            // Validate description
            if (description === '') {
                error2.textContent = 'Please enter a product description.';
                error2.style.display = 'block';
                isValid = false;
            }
    
            // Validate regular price
            if (regularPrice === '') {
                error3.textContent = 'Please enter a regular price.';
                error3.style.display = 'block';
                isValid = false;
            } else if (!/^\d+(\.\d{1,2})?$/.test(regularPrice)) {
                error3.textContent = 'Please enter a valid regular price (e.g., 123 or 123.45).';
                error3.style.display = 'block';
                isValid = false;
            }
    
            // Validate sales price
            if (salesPrice !== '' && !/^\d+(\.\d{1,2})?$/.test(salesPrice)) {
                error4.textContent = 'Please enter a valid sales price (e.g., 123 or 123.45).';
                error4.style.display = 'block';
                isValid = false;
            }
    
            // Validate color quantities
            if (blackQuantity === '' || blueQuantity === '' || redQuantity === '' || greenQuantity === '' || yellowQuantity === '') {
                alert('Please enter quantities for all colors.');
                isValid = false;
            }
    
            if (!isValid) {
                event.preventDefault(); // Prevent form submission if validation fails
            }
        });
    </script>
    
    
       

