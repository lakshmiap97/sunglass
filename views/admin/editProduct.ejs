    <script>
        async function deleteImage(productId, imageIndex) {
            try {
                // Show confirmation dialog
                const result = await Swal.fire({
                    title: 'Are you sure?',
                    text: 'Do you really want to delete this image?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                });
    
                if (result.isConfirmed) {
                    // Proceed with the deletion
                    const response = await fetch('/deleteImage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId, imageIndex })
                    });
    
                    const data = await response.json();
    
                    if (data.success) {
                        await Swal.fire({
                            title: 'Deleted!',
                            text: 'Image deleted successfully!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
                        // Remove the image container from the DOM
                        document.getElementById(`image-container-${imageIndex}`).remove();
                    } else {
                        throw new Error('An error occurred while deleting the image.');
                    }
                }
            } catch (error) {
                await Swal.fire({
                    title: 'Error!',
                    text: error.message,
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        }
    </script>
      

   
   
      <script>



      function validateForm() {
    let isValid = true;

    // Product Name validation
    const productName = document.getElementById('pdtname').value.trim();
    if (productName === '') {
        document.getElementById('error1').style.display = 'block';
        document.getElementById('error1').innerText = 'Product name is required.';
        isValid = false;
    } else {
        document.getElementById('error1').style.display = 'none';
    }

    // Description validation
    const description = document.getElementById('pdtdes').value.trim();
    if (description === '') {
        document.getElementById('error2').style.display = 'block';
        document.getElementById('error2').innerText = 'Description is required.';
        isValid = false;
    } else {
        document.getElementById('error2').style.display = 'none';
    }

    // Regular Price validation
    const regularPrice = document.getElementById('regprice').value.trim();
    if (regularPrice === '') {
        document.getElementById('error3').style.display = 'block';
        document.getElementById('error3').innerText = 'Regular price is required.';
        isValid = false;
    } else if (isNaN(regularPrice) || parseFloat(regularPrice) <= 0) {
        document.getElementById('error8').style.display = 'block';
        document.getElementById('error8').innerText = 'Please enter a valid price.';
        isValid = false;
    } else {
        document.getElementById('error3').style.display = 'none';
        document.getElementById('error8').style.display = 'none';
    }

    // Sales Price validation
    const salesPrice = document.getElementById('saleprice').value.trim();
    if (salesPrice !== '' && (isNaN(salesPrice) || parseFloat(salesPrice) <= 0)) {
        document.getElementById('error4').style.display = 'block';
        document.getElementById('error4').innerText = 'Please enter a valid sales price.';
        isValid = false;
    } else {
        document.getElementById('error4').style.display = 'none';
    }

    // Color Quantities validation
    const colorFields = ['blackQuantity', 'blueQuantity', 'redQuantity', 'greenQuantity', 'yellowQuantity'];
    colorFields.forEach(fieldId => {
        const quantity = document.getElementById(fieldId).value.trim();
        if (quantity === '' || isNaN(quantity) || parseInt(quantity) < 0) {
            document.getElementById(fieldId).style.borderColor = 'red';
            isValid = false;
        } else {
            document.getElementById(fieldId).style.borderColor = '';
        }
    });

    return isValid;
}

function confirmEditSubmission(event) {
    if (!validateForm()) {
        event.preventDefault();
        alert('Please correct the errors before submitting the form.');
    }
}



    document.getElementById('editProductForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the form from submitting immediately

        // Perform client-side validation
        let isValid = validateForm();
        if (!isValid) {
            return false;
        }

        // Ask for confirmation before submitting
        if (confirm('Are you sure you want to update this product?')) {
            const formData = new FormData(this);

            fetch('/editProduct', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Product updated successfully!');
                    window.location.href = '/product'; // Redirect after successful update
                } else {
                    alert(`Error: ${data.message}`);
                }
            })
            .catch(error => console.error('Error:', error));
        }
    });

    function validateForm() {
        let isValid = true;

        const name = document.getElementById('pdtname').value.trim();
        const description = document.getElementById('pdtdes').value.trim();
        const regularPrice = document.getElementById('regprice').value.trim();
        const salesPrice = document.getElementById('saleprice').value.trim();

        if (!name) {
            document.getElementById('error1').style.display = 'block';
            document.getElementById('error1').innerText = 'Product name is required';
            isValid = false;
        } else {
            document.getElementById('error1').style.display = 'none';
        }

        if (!description) {
            document.getElementById('error2').style.display = 'block';
            document.getElementById('error2').innerText = 'Description is required';
            isValid = false;
        } else {
            document.getElementById('error2').style.display = 'none';
        }

        if (!regularPrice || isNaN(regularPrice) || parseFloat(regularPrice) <= 0) {
            document.getElementById('error3').style.display = 'block';
            document.getElementById('error3').innerText = 'Valid regular price is required';
            isValid = false;
        } else {
            document.getElementById('error3').style.display = 'none';
        }

        if (salesPrice && (isNaN(salesPrice) || parseFloat(salesPrice) <= 0)) {
            document.getElementById('error4').style.display = 'block';
            document.getElementById('error4').innerText = 'Valid sales price is required';
            isValid = false;
        } else {
            document.getElementById('error4').style.display = 'none';
        }

        return isValid;
    }



    </script>
    
    
    
       

